index dffbbc9e2..b85b85b9b 100644
--- a/drivers/net/ethernet/mellanox/mlxsw/minimal.c
+++ b/drivers/net/ethernet/mellanox/mlxsw/minimal.c
@@ -186,7 +186,7 @@ mlxsw_m_port_create(struct mlxsw_m_area *mlxsw_m_area, u8 slot_index,
 	mlxsw_m_port->slot_index = slot_index;
 	mlxsw_m_port->local_port = local_port;
 	mlxsw_m_port->module = module;
-
+printk("%s slot_index %d local_port %d module %d\n", __func__, slot_index, local_port, module);
 	dev->netdev_ops = &mlxsw_m_port_netdev_ops;
 	dev->ethtool_ops = &mlxsw_m_port_ethtool_ops;
 
@@ -199,7 +199,7 @@ mlxsw_m_port_create(struct mlxsw_m_area *mlxsw_m_area, u8 slot_index,
 
 	netif_carrier_off(dev);
 	mlxsw_m_port_switchdev_init(mlxsw_m_port);
-	mlxsw_m_area->ports[module] = mlxsw_m_port;
+	mlxsw_m_area->ports[local_port] = mlxsw_m_port;
 	err = register_netdev(dev);
 	if (err) {
 		dev_err(mlxsw_m->bus_info->dev, "Port %d: Failed to register netdev\n",
@@ -210,7 +210,7 @@ mlxsw_m_port_create(struct mlxsw_m_area *mlxsw_m_area, u8 slot_index,
 	return 0;
 
 err_register_netdev:
-	mlxsw_m_area->ports[module] = NULL;
+	mlxsw_m_area->ports[local_port] = NULL;
 	mlxsw_m_port_switchdev_fini(mlxsw_m_port);
 	free_netdev(dev);
 err_dev_addr_get:
@@ -253,6 +253,9 @@ static int mlxsw_m_ports_create(struct mlxsw_m_area *mlxsw_m_area, u8 slot_index
 	if (!slot_index)
 		mlxsw_m->max_modules_per_slot =
 			mlxsw_reg_mgpir_max_modules_per_slot_get(mgpir_pl);
+	else
+		mlxsw_m_area->module_off = (slot_index - 1) *
+					   mlxsw_m->max_modules_per_slot;
 
 	mlxsw_reg_mgpir_unpack(mgpir_pl, NULL, NULL, NULL,
 			       &mlxsw_m_area->max_ports, NULL);
